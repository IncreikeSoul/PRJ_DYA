        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Por ubicación
                </h2>
                <div class="panel-toolbar pr-3 align-self-end">
                    <ul id="demo_panel-tabs" class="nav nav-tabs border-bottom-0" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tab_empresa_ubicacion" role="tab">Dashboard</a>
