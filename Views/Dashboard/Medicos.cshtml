                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Tipo empresa</th>
                                            <th>Cantidad</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

