                    <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Close"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="tab-content p-3 @if (@ViewBag.IdPerfilIN == 2) { @Html.Raw("tab-print") }">
                        <div class="tab-pane fade show active" id="tab_medico_especialidad" role="tabpanel">
                            <div id="dashboard-especialidad" style="min-height: 300px;"></div>
                        </div>
                        <div class="tab-pane fade" id="tab_medico_especialidad_detalle" role="tabpanel">
